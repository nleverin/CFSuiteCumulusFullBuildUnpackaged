<!-- Top_2_1_ColumnLayout -->
<aura:component implements="forceCommunity:layout" 
                extends="c:CommunitySectionLayout"
                access="global" >
    
    <aura:attribute name="headerContent" type="Aura.Component[]" required="false"></aura:attribute>
    
    <aura:attribute name="content" type="Aura.Component[]" required="false"></aura:attribute>
    
    <aura:attribute name="content_col1" type="Aura.Component[]" required="false"></aura:attribute>
    <aura:attribute name="content_col2" type="Aura.Component[]" required="false"></aura:attribute>
    
    <aura:attribute name="footerContent" type="Aura.Component[]" required="false"></aura:attribute>
    <ltng:require styles="{!$Resource.ExternalCSS}" />
    <div class="section">
        <div class="top-section">
            {!v.headerContent}
        </div>
    </div>
    
    <div class="">
        <div class="section">
            <div class="row container">
                <div class="whole">{!v.content}</div>
            </div>
        </div>
        
        <div class="section">
            <div class="row container">
                <div class="two-thirds">{!v.content_col1}</div>
                <div class="third">{!v.content_col2}</div>
            </div>
        </div>
    </div>
    
    <div class="section">
        <div class="top-section">
            {!v.footerContent}
        </div>
    </div>
    
</aura:component>