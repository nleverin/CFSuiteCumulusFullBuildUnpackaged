<apex:page sidebar="false" id="CommunityRegister" controller="CommunitiesSelfRegController" showheader="false" standardStylesheets="false" applyHtmlTag="false" applyBodyTag="false">
  
    <apex:slds />
    <html>
        <head>
            <link rel="icon" href="{!URLFOR($Resource.CommunityFavicon)}" type="img/x-icon"/>
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
            <meta name="viewport" content="initial-scale=1, maximum-scale=1,user-scalable=no"/>
            <title>Register</title>
            <apex:stylesheet value="{!URLFOR($Resource.cfsuite1__FontAwesome,'/css/all.css')}"/>
            <style>
                * {
                box-sizing: border-box;
                }
                body.slds-scope {
                background: url('{!$Resource.cfsuite1__CommunityLoginBackground}') no-repeat center center fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
                }
                #container {
                background: #fff;
                left: 50%;
                margin-top: -300px;
                margin-left: -170px;
                position: fixed;
                top: 50%;
                width: 340px;
                }
                .content {
                padding: 15px 30px 30px;
                }
                img.logo {
                padding: 20px 20px 35px;
                width: 100%;
                }
                .input-row {
                margin-bottom: 10px;
                }
                .input-container .slds-input {
                background-color: #F0F0F0;
                border-style: unset;
                padding: 8px;
                padding-left: 30px;
                width: 100%;
                }
                i {
                color: #B3B3B3;
                }
                .messageTable {
                color: rgb(194, 57, 52);
                text-align: center;
                }
                .message {
                margin-bottom: 10px;
                }
                .slds-scope .btn-reg {
                background-color: #156B4E;
                border-color: #156B4E;
                border-radius: 4px;
                border-style: solid;
                color: white;
                font-size: 20px;
                padding: 10px;
                width: 100%;
                }
                .links {
                padding: 15px 30px;
                }
                .links a,
                .links a:hover,
                .links a:active,
                .links a:visited {
                color: #5E5E5E;
                display: inline-block;
                text-decoration: none;
                }
                /* 'Error' in message */
                .messageTable .messageCell h4 {
                display: none;
                }
            </style>
        </head>
        
        <body class="slds-scope">
            <!-- Begin Page Content -->
            <div id="container">
                <div class="content">
                    <div class="logo-container">
                        <img class="logo" src="{! $Resource.cfsuite1__Logos + '/CTTGlogotypegreen2.svg' }" />
                    </div>
                    <div class="login-form">
                        <apex:form id="theForm" forceSSL="true">
                           <apex:pagemessages escape="false"/>
                            <div class="slds-form">
                                <div class="input-container">
                                    <div class="input-row slds-input-has-icon slds-input-has-icon_left">
                                        <div class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" aria-hidden="true">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <apex:inputText required="true" id="firstName" styleClass="slds-input" value="{!firstName}" html-placeholder="First Name"/>
                                    </div>
                                    
                                    <div class="input-row slds-input-has-icon slds-input-has-icon_left">
                                        <div class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" aria-hidden="true">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <apex:inputText required="true" id="lastName" styleClass="slds-input" value="{!lastName}" html-placeholder="Last Name"/>
                                    </div>
                                    
                                    <div class="input-row slds-input-has-icon slds-input-has-icon_left">
                                        <div class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" aria-hidden="true">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <apex:inputText required="true" id="email" styleClass="slds-input" value="{!email}" label="{!$Label.site.email}" html-placeholder="Email"/>
                                    </div>
                                    
                                    <div class="input-row slds-input-has-icon slds-input-has-icon_left">
                                        <div class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" aria-hidden="true">
                                            <i class="fas fa-lock-alt"></i>
                                        </div>
                                        <apex:inputSecret id="password" value="{!password}" styleClass="slds-input" html-placeholder="Create Password"/>
                                    </div>
                                    
                                    <div class="input-row slds-input-has-icon slds-input-has-icon_left">
                                        <div class="slds-icon slds-input__icon slds-input__icon_left slds-icon-text-default" aria-hidden="true">
                                            <i class="fas fa-lock-alt"></i>
                                        </div>
                                        <apex:inputSecret id="confirmPassword" value="{!confirmPassword}" styleClass="slds-input" html-placeholder="Confirm Password"/>
                                    </div>
                                </div>
                            </div>
                            
                           <!-- <apex:pageMessages id="error"/> -->
                            
                            <apex:commandButton styleClass="btn-reg" action="{!registerUser}" value="Create an account" id="submit"/>
                            <br/>
                        </apex:form>
                    </div>
                    
                    <div class="links">
                        <center>
                            <!--<apex:outputLink value="{!$Page.CommunitiesLogin}">Already have an account?</apex:outputLink>-->
                            <a class="link-forgot" href="/CustomCommunityLogin">Already have an account?</a>
                        </center>
                    </div>
                </div>
            </div>
        </body>
    </html>
</apex:page>