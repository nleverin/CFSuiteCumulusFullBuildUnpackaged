<apex:slds />
    
    <html>
        <head>
            <link rel="icon" href="{!URLFOR($Resource.CommunityFavicon)}" type="img/x-icon"/>
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
            <meta name="viewport" content="initial-scale=1, maximum-scale=1,user-scalable=no"/>
            <title>Login</title>
            <apex:stylesheet value="{!URLFOR($Resource.cfsuite1__FontAwesome,'/css/all.css')}"/>
            <apex:stylesheet value="{!URLFOR($Resource.ExternalCSS)}"/>
            <style>
                * {
                box-sizing: border-box;
                }
                body.slds-scope {
                background: url('{!$Resource.cfsuite1__CommunityLoginBackground}') no-repeat center center fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
                color: #414141;
                }
                #container {
                background: #fff;
				margin: 2em auto 0em;
                width: 680px;
                max-width:100%;
                position: relative;
               	font-family: "franklin-gothic-URW-Boo", Arial, sans-serif;
                font-size: .94rem;

                }
                #container.single-col {
                width: 420px;
                max-width:100%;
                position: relative;
                }
                #container.single-col .column1 {
                	padding: 40px 50px;
                }
                #container.single-col img.logo {
                width: 50%;
                }
                .slds-input-has-icon {
                color: #868686;
                }
                .slds-input__icon i {
				padding-left: 6px;               
                }
                form .input-container input::placeholder {
                color: #6b6b6b;
                opacity:
                }
                
