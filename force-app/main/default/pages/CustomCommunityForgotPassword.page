<apex:page sidebar="false" controller="ForgotPasswordController" showheader="false" standardStylesheets="false" applyHtmlTag="false" applyBodyTag="false">
    <apex:slds />
    
    <html>
        <head>
            <link rel="icon" href="{!URLFOR($Resource.CommunityFavicon)}" type="img/x-icon"/>
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
            <meta name="viewport" content="initial-scale=1, maximum-scale=1,user-scalable=no"/>
            <title>Forgot Password</title>
            <apex:stylesheet value="{!URLFOR($Resource.cfsuite1__FontAwesome,'/css/all.css')}"/>
            <apex:stylesheet value="{!URLFOR($Resource.ExternalCSS)}"/>
            <style>
                /** {
                box-sizing: border-box;
                }
                body.slds-scope {
                background: url('{!$Resource.cfsuite1__CommunityLoginBackground}') no-repeat center center fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
