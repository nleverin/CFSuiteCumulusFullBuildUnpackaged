                        break;
                    default: errorElem = null;
                }
                if(errorElem) {
                    errorElem.text(errors.business[i]);
                }
               
            }
            if(count > 0) {
                $('.errors.business').append($('<br />'));
            }
        }
        
        function beforeSubmit(isIndividual){
            cleanOtherForm(isIndividual);  //Cleans the form that won't be submitted                      
            fixPlacehoders();
            
            return isValid(isIndividual);
        }
        function isValid(isIndividual) {
            let isValid = true;
            let isValidEmail = true;
            let isValidPas = true;
            let isValidtac = true;
            let isValidPhone = true;
            //let isValidRatesNoticetac = true;
            
            let errorType = (isIndividual ? 'individual' : 'business');
            
            let emailId = isIndividual ? '[id*=theForm1][id$=email]' : '[id*=theForm2][id$=businessEmail]';
            isValidEmail = validateEmail(emailId, errorType);
            
            let pwdid = '[id*=theForm' + (isIndividual ? '1' : '2') + '][id$=password]';
            let confid = '[id*=theForm' + (isIndividual ? '1' : '2') + '][id$=confirmPassword]';
            isValidPas = validatePass(pwdid, confid, errorType);
            
            let tacid = '#tac' + (isIndividual ? '1' : '2');
            isValidtac = validateTAC(tacid);
            let rntacid = '#tac' + (isIndividual ? '3' : '4');
            //isValidRatesNoticetac = validateTAC(rntacid);
            
            let phoneId = isIndividual ? '[id*=theForm1][id$=mobilePhone]' : '[id*=theForm2][id$=businessMobile]';
            isValidPhone = validatePhone(phoneId, errorType);
            
            renderErrors();
            
            if(isValidEmail == true && isValidPas == true && isValidtac == true && isValidPhone == true) // && isValidRatesNoticetac == true
              return true;
            else
              return false;
        }  
        
        function validateTAC(tacid) {
            let tac = $(tacid);
            if(!tac.prop('checked')) {
                let label = tac.parent().find('label');
                label.toggleClass('glow', true);
                setTimeout(function() {
                    label.toggleClass('glow', false);
                }, 500);
                return false;   
            }            
            return true;
        }
        
         function validatePhone(phoneId, errorType) {
            let isValid = true;
            let phoneEl = $(phoneId);
            isValid = isValidPhone(phoneEl.val());
            
            phoneEl.toggleClass('invalid', !isValid);
            if(isValid) {
                errors[errorType].phone = null;
            }else {
                errors[errorType].phone = '* Phone number must be 10 digits long and cannot contain letters.';
                isValid = false;
            }               
            
            return isValid;
        } 
        
        function validateEmail(emailId, errorType) {
            let isValid = true;
            let emailEl = $(emailId);
            isValid = isValidEmail(emailEl.val());
            
            emailEl.toggleClass('invalid', !isValid);
            if(isValid) {
                errors[errorType].email = null;
            }else {
                errors[errorType].email = '* Please enter a valid email address.';
                isValid = false;
            }               
            
            return isValid;
        }        
        function validatePass(pid, cid, errorType) {
            let isValid = true;
            
            let pwdEl = $(pid);
            let confEl = $(cid);
            
            if(isStrongPassword(pwdEl.val())) {
                errors[errorType].pwdstrong = null;
                
                if(isMatchPassword(pwdEl.val(), confEl.val())) {
                    errors[errorType].pwdmatch = null;                
                    confEl.toggleClass('invalid', false);
                }else{
                    isValid = false;
                    confEl.toggleClass('invalid', true);
                    errors[errorType].pwdmatch = '* Passwords don\'t match.';
                }
            }else{
                isValid = false;
                errors[errorType].pwdstrong = '* Password must contain at least 8 characters and at least one number and one letter.';
            }            
            
            pwdEl.toggleClass('invalid', !isValid);
            return isValid;
        }
        function fixPlacehoders() {
            $('.slds-input').each(function() {
                if($(this).val().trim() == '') {
