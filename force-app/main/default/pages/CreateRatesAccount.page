                    case "pwdmatch": errorElem = $("#err-in-confirmPassword");
                        break;
                    case "phone":  errorElem = $("#err-in-mobilePhone");
                        break;
                    default: errorElem = null;
                }
                if(errorElem) {
                    errorElem.text(errors.individual[i]);
                }
                
             
            }
            if(count > 0) {
                $('.errors.individual').append($('<br />'));
            }
            
            count = 0;
            for(let i in errors.business){
                switch(i) {
                    case "email": errorElem = $("#err-b-businessEmail");
                        break;
                    case "pwdstrong": errorElem = $("#err-b-password");
                        break;
                    case "pwdmatch": errorElem = $("#err-b-confirmPassword");
